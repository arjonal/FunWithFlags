<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="400dp">

    <ImageButton
        android:id="@+id/flag_france"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:onClick="flag_clic"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/france" />

    <ImageButton
        android:id="@+id/flag_italy"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:onClick="flag_clic"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/flag_unitedstates"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flag_france"
        app:layout_constraintTop_toTopOf="@+id/flag_france"
        app:srcCompat="@drawable/italy" />

    <ImageButton
        android:id="@+id/flag_unitedstates"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:onClick="flag_clic"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/flag_italy"
        app:layout_constraintTop_toTopOf="@+id/flag_italy"
        app:srcCompat="@drawable/unitedstates" />

    <ImageButton
        android:id="@+id/flag_germnay"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:onClick="flag_clic"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flag_france"
        app:srcCompat="@drawable/germany" />


</android.support.constraint.ConstraintLayout>
